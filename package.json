{
    "name": "gear-cms-frontend",
    "description": "Gear CMS Frontend",
    "version": "1.0.0",
    "author": "Aaron Iker <mail@aaroniker.me>",
    "private": true,
    "scripts": {
        "icons": "icon-font-generator gear/frontend/assets/icons/*.svg -o gear/frontend/assets/fonts -j false --html false --name icons -p icon",
        "css": "node-sass --include-path gear/frontend/assets/scss gear/frontend/assets/scss/style.scss gear/frontend/assets/css/style.css",
        "watch-css": "nodemon -e scss -x \"npm run css\"",
        "server": "cross-env NODE_ENV=development webpack-dev-server --open --hot",
        "dev": "npm-run-all --parallel icons server watch-css",
        "pack": "cross-env NODE_ENV=production webpack --progress --hide-modules",
        "build": "npm-run-all --parallel icons css pack"
    },
    "dependencies": {
        "axios": "^0.17.0",
        "vue": "^2.4.4",
        "vue-router": "^2.7.0"
    },
    "devDependencies": {
        "babel-core": "^6.0.0",
        "babel-loader": "^6.0.0",
        "babel-preset-env": "^1.5.1",
        "cross-env": "^3.0.0",
        "css-loader": "^0.25.0",
        "file-loader": "^0.9.0",
        "nodemon": "^1.11.0",
        "node-sass": "^4.5.3",
        "npm-run-all": "^4.0.2",
        "icon-font-generator": "^1.1.1",
        "sass-loader": "^5.0.1",
        "sass-resources-loader": "^1.3.1",
        "vue-loader": "^12.1.0",
        "vue-template-compiler": "^2.3.3",
        "webpack": "^2.6.1",
        "webpack-dev-server": "^2.4.5"
    }
}
